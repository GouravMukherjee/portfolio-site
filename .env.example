# Environment variables for Portfolio Site
# Copy this file to .env.local and replace placeholder values

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://yourportfolio.com

# Email Service (Resend, SendGrid, Mailgun)
# Get API key from: https://resend.com/api-keys
EMAIL_SERVICE_KEY=your-email-service-key
CONTACT_EMAIL=gouravmukherjee058@gmail.com

# Newsletter Service (Mailchimp example)
# Get API key from: https://mailchimp.com/help/about-api-keys/
MAILCHIMP_API_KEY=your-mailchimp-api-key
MAILCHIMP_AUDIENCE_ID=your-audience-id
MAILCHIMP_SERVER_PREFIX=us1

# Analytics
# Vercel Analytics (automatic with Vercel deployment)
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=

# Google Analytics (optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Plausible Analytics (privacy-friendly alternative)
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=yourportfolio.com

# Error Tracking (Sentry)
# Get DSN from: https://sentry.io/
NEXT_PUBLIC_SENTRY_DSN=

# Database (Optional - for storing submissions)
# Example: PostgreSQL, MongoDB, etc.
DATABASE_URL=postgresql://user:password@localhost:5432/portfolio
